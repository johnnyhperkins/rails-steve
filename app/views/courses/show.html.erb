
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">
      <%= @course.name %>
    </h1>
    <p class="lead">
      <%= @course.description %>
    </p>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-sm">
      <%= link_to 'Edit Course', edit_course_path(@course) %>
    </div>
    <div class="col-sm">

      <h5>Enrollments</h5>

      <table class="table">
        <% @course.users.each do |user| %>
          <tr>
            <td>
              <%= user.first_name %>
            </td>
            <td>
              <%= user.last_name %>
            </td>
          </tr>
        <% end %>
      </table>

      <div class="bulk-enroll-form">
        <%= form_tag bulk_enroll_course_path(@course), multipart: true do %>
          <%= file_field_tag :file, onchange: "form.submit()" %>
        <% end %>
      </div>

    </div>
  </div>
</div>

